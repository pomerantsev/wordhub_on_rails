%h4.no-margin-top Вход на сайт
= form_tag attempt_login_path, html: { id: "login-form" } do
  = label_tag :email, "Email:"
  = email_field_tag :email, nil, required: true
  = label_tag :password, "Пароль:"
  = password_field_tag :password, nil, required: true
  %span.help-block
  = submit_tag "Войти", class: "btn"
  = link_to "Зарегистрироваться", signup_path, class: "btn btn-link register-link"