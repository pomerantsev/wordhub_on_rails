%h4.first-header= t("application.index.login_form.header")
= form_tag attempt_login_path do
  .email
    = label_tag :email, "#{ t "application.index.login_form.email" }:"
    = email_field_tag :email, nil, required: true
  .password
    = label_tag :password, "#{ t "application.index.login_form.password" }:"
    = password_field_tag :password, nil, required: true
  = submit_tag t("application.index.login_form.login")
  = link_to t("application.index.login_form.sign_up"),
            signup_path,
            class: "register-link"
