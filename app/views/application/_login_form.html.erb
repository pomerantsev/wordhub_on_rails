<h4 class = "no-margin-top">Вход на сайт</h4>
<%= form_tag attempt_login_path, :html => {:id => "loginForm"} do %>
    <%= label_tag :email, "Email:" %>
    <%= email_field_tag :email, nil, required: true %>
    <%= label_tag :password, "Пароль:" %>
    <%= password_field_tag :password, nil, required: true %>
    <span class="help-block"></span>
    <%= submit_tag "Войти", :class => "btn" %>
    <%= link_to "Зарегистрироваться", signup_path, :class => "btn btn-link registerLink" %>
<% end %>