<% @page_title = "Все карточки" %>

<%= render "deleted_today" %>

<% @flashcards_grouped_by_date.keys.sort.reverse.each do |date| %>

    <p class = "lead"><%= date %>:</p>

    <% @flashcards_grouped_by_date[date].reverse.each do |flashcard| %>
        <a id = "<%= flashcard.id %>"></a>
        <% added_class = flashcard.learned? ? " flashcard-learned" : "" %>
        <%= link_to edit_flashcard_path(flashcard), :class => "hero-unit flashcard" + added_class do %><%= flashcard.front_text %><hr /><%= flashcard.back_text %><% end %>
    <% end %>

<% end %>
